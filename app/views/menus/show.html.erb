<h4><%= @menu.name %></h4>
<%= form_with url: menu_path(@menu.id), method: "PUT", class:"add_menu_item_form" do %>
  <%= text_field_tag 'name', nil, class: 'add_menu_item_input', placeholder: "Dish Name" %>
  <%= text_field_tag 'description', nil, class: 'add_menu_item_input', placeholder: "Describe the dish..." %>
  <%= number_field_tag 'price', nil, class: 'add_menu_item_input', placeholder: "What's the price?" %>
  <%= submit_tag "Add to Menu", class: "add_menu_item_input add_menu_item_input__submit" %>
<%end%>

<%= render partial: "menu_items", locals:{
  show_add_to_cart: false
} %>
